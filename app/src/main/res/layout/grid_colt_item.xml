<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/colt_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_color"

    android:orientation="vertical"

    android:layout_margin="3dp">


    <LinearLayout
        android:id="@+id/coltFrame_coltGrid_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >



        <ImageView

            android:id="@+id/coltImage_coltGrid_item"

            android:layout_width="250dp"
            android:layout_height="250dp"

            android:scaleType="centerCrop"


            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="2dp">



        <LinearLayout

            android:id="@+id/coltLike_coltGrid_item"
            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"

            android:layout_alignParentRight="true"

            android:gravity="center_vertical"
          >

            <ImageView

                android:id="@+id/likeIcon_coltGrid_item"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/heart_gray" />

            <TextView

                android:id="@+id/coltLikeNum_coltGrid_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:text="666"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/coltName_coltGrid_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toLeftOf="@id/coltLike_coltGrid_item"

            android:text="西周  与盘龙"
            android:textColor="@color/text_color_black"



            />
    </RelativeLayout>


</LinearLayout>