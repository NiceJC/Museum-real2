<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#1893fb"

        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_weight="1"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="#ffffff"
            android:textSize="18sp"

            />

        <ImageView

            android:id="@+id/to_setup"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:padding="6dp"
            android:src="@drawable/selector_setup" />


    </LinearLayout>

    <!--<ScrollView-->
        <!--android:fillViewport="true"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scrollbars="none">-->

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical">-->


    <LinearLayout
        android:orientation="vertical"
        android:background="@mipmap/minebg"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="66dp"

                    android:layout_height="66dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle_stroke"
                    android:gravity="center">

                    <MyView.ImageViewInCircle

                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/hgportrait" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:text="阿喂真的帅"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/mine_follower_following"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/fans_and_watch_bg"


                    android:layout_width="195dp"
                    android:layout_height="34dp">

                    <View

                        android:layout_centerVertical="true"
                        android:id="@+id/middle"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/divider_gray"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:layout_centerVertical="true"

                        android:layout_marginRight="6dp"
                        android:id="@+id/left"
                        android:layout_toLeftOf="@+id/middle"
                        android:text="关注"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="2dp"

                        android:text="666"
                        android:id="@+id/mine_following_num"
                        android:layout_toLeftOf="@+id/left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="6dp"
                        android:id="@+id/mine_fans_num"
                        android:layout_toRightOf="@+id/middle"
                        android:text="666"
                        android:layout_centerVertical="true"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"

                        android:id="@+id/right"
                        android:layout_toRightOf="@+id/mine_fans_num"
                        android:text="粉丝"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"

                    android:id="@+id/mine_indicator_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/mine_indicator_bg"
                    android:gravity="center"
                    android:orientation="vertical">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="展馆"

                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"

                    android:id="@+id/mine_indicator_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/mine_indicator_bg"
                    android:gravity="center"
                    android:orientation="vertical">




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="展览"

                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"

                    android:id="@+id/mine_indicator_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/mine_indicator_bg"
                    android:gravity="center"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="展品"

                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"

                    android:id="@+id/mine_indicator_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/mine_indicator_bg"
                    android:gravity="center"
                    android:orientation="vertical">




                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="评论"

                        android:textSize="14sp" />
                </LinearLayout>


            </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mine_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v4.view.ViewPager>

    <!--</LinearLayout>-->

    <!--</ScrollView>-->
</LinearLayout>